<div class='mt-4'>
    <h2>THÊM KHOÁ HỌC</h2>
    <form class='mt-4' method='POST' action='/courses/store'>
        <div class='form-group'>
            <label for='name'>Nhập tên khoá học</label>
            <input type='text' class='form-control' id='name' placeholder='Nhập tên khoá học...' name='name' />
        </div>

        <div class='form-group'>
            <label for='description'>Mô tả khoá học</label>
            <input
                type='text'
                class='form-control'
                id='description'
                placeholder='Nhập mô tả khoá học...'
                name='description'
            />
        </div>

        <div class='form-group'>
            <label for='videoId'>Video ID</label>
            <input type='text' class='form-control' id='videoId' placeholder='Nhập Video ID...' name='videoId' />
        </div>

        <div class='form-group'>
            <label for='level'>Trình độ</label>
            <input type='text' class='form-control' id='level' placeholder='Nhập trình độ...' name='level' />
        </div>

        <div class='form-group'>
            <label for='courseTotal'>Tổng số bài học</label>
            <input
                type='number'
                class='form-control'
                id='courseTotal'
                placeholder='Nhập số bài học trong khoá...'
                name='courseTotal'
            />
        </div>

        <div class='form-group'>
            <label for='timeTotal'>Tổng số giờ hoàn thành khoá học</label>
            <input
                type='number'
                class='form-control'
                id='timeTotal'
                placeholder='Nhập tổng thời lượng khoá học (giờ)...'
                name='timeTotal'
            />
        </div>
        <button type='submit' class='btn btn-primary'>Thêm khoá học</button>
    </form>
</div>